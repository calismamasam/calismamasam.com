<% if @post.products.any? %>
  <div class="table-responsive stats-table">
    <h2>Kullandığı Ekipmanlar</h2>
    <table class="table products-table">
      <thead>
        <tr>
          <td width="50%">Donanım</td>
          <td width="50%">Yazılım</td>
        </tr>
      </thead>
      <tbody>
        <td width="50%">
          <table>
            <tbody>
              <% @post.products.where(category_id: ProductCategory.find_by(title: 'Donanım')&.subtree_ids).each do |product| %>
                <tr>
                  <td width="45">
                    <%= link_to product_path(product) do %>
                      <%= image_tag(product.image(:thumb), width: '30', alt: product.decorate.name_with_brand, title: product.decorate.name_with_brand) %>
                    <% end %>
                  </td>
                  <td>
                    <div class="product-title">
                      <%= link_to product.decorate.name_with_brand, product_path(product) %>
                      <%= render "shared/vote", product: product %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </td>
        <td width="50%">
          <table>
            <tbody>
              <% @post.products.where(category_id: ProductCategory.find_by(title: 'Yazılım')&.subtree_ids).each do |product| %>
                <tr>
                  <td width="45">
                    <%= link_to product_path(product) do %>
                      <%= image_tag(product.image(:thumb), width: '30', alt: product.decorate.name_with_brand, title: product.decorate.name_with_brand) %>
                    <% end %>
                  </td>
                  <td>
                    <div class="product-title">
                      <%= link_to product.decorate.name_with_brand, product_path(product) %>
                      <%= render "shared/vote", product: product %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </td>
      </tbody>
    </table>
  </div>
  <% if user_signed_in? %>
    <script>
      $(document).on('ready', function () {
        $('.product-vote').click(function (e) {
          var parent = $(this).parent();
          var voteUrl = parent.find('a').attr('href') + '/vote';
          $.get(voteUrl, function (data) {
            if(data.status)
              parent.find('i').removeClass('fa-plus').addClass('fa-minus');
            else
              parent.find('i').removeClass('fa-minus').addClass('fa-plus');
          });
        });
      });
    </script>
  <% end %>
<% end %>
