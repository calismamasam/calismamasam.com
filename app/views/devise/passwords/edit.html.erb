<div class="password-reset-form">
<h2>Parolanı Değiştir</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "Yeni parola" %><br />
    <% if @minimum_password_length %>
      <em>(Minimum <%= @minimum_password_length %> karakter)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Yeni parola tekrar" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Değiştir", class: 'btn btn-success' %>
  </div>
<% end %>

<% if !resource.errors.empty? %>
  <% message = resource.errors.full_messages.join('\n') %>
  <script>
    $(document).on('ready', function () {
      sweetAlert({
        type: "error",
        title: "Hata",
        text: "<%= message %>",
        confirmButtonColor: "#00d888",
        confirmButtonText: "Tamam"
      });
    });
  </script>
<% end %>
</div>
