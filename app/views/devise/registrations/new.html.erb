<div class="row">
  <div class="login-form">
    <h3>Kayıt ol ya da <%= link_to 'giriş yap', new_user_session_path %></h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :name, value: 'Adınız Soyadınız' %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, value: 'E-posta Adresiniz' %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, value: 'Parolanız' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, value: 'Parolanızı Tekrar Yazın' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <%= f.submit "Kayıt Ol", class: "btn btn-success" %>
    <% end %>

    <%= render 'devise/shared/omniauth_links' %>
  </div>
</div>

<% if resource.errors.any? %>
  <% message = "Lütfen form alanlarını doldurarak tekrar deneyin." %>
  <% message = resource.errors.full_messages.join('\n') %>
  <script type="text/javascript">
    $(document).on('ready', function () {
      sweetAlert({
        type: "error",
        title: "Hata",
        text: "<%= message %>",
        confirmButtonColor: '#00d888',
        confirmButtonText: "Tamam"
      });
    });
  </script>
<% end %>
